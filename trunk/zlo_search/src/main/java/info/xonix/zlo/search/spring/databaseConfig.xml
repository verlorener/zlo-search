    <bean id="dataSourceLocal" class="org.apache.tomcat.jdbc.pool.DataSource"
          destroy-method="close">
        <property name="driverClassName" value="${jdbc.driverClassName}"/>
        <property name="url" value="${jdbc.url.local}"/>
        <property name="username" value="${jdbc.username.local}"/>
        <property name="password" value="${jdbc.password.local}"/>

        <property name="defaultAutoCommit" value="${jdbc.pool.defaultAutoCommit}"/>
        <property name="maxActive" value="${jdbc.pool.maxActive}"/>
        <property name="validationInterval" value="${jdbc.pool.validationInterval}"/>
        <property name="validationQuery" value="${jdbc.pool.validationQuery}"/>
    </bean>

    <bean id="dataSourceRt" class="org.apache.tomcat.jdbc.pool.DataSource"
          destroy-method="close">
        <property name="driverClassName" value="${jdbc.driverClassName}"/>
        <property name="url" value="${jdbc.url.rt}"/>
        <property name="username" value="${jdbc.username.rt}"/>
        <property name="password" value="${jdbc.password.rt}"/>

        <property name="defaultAutoCommit" value="${jdbc.pool.defaultAutoCommit}"/>
        <property name="maxActive" value="${jdbc.pool.maxActive}"/>
        <property name="validationInterval" value="${jdbc.pool.validationInterval}"/>
        <property name="validationQuery" value="${jdbc.pool.validationQuery}"/>
    </bean>

    <bean id="dataSource" class="info.xonix.zlo.search.spring.db.DataSourceFactory">
        <property name="dataSourceLocal" ref="dataSourceLocal"/>
        <property name="dataSourceRt" ref="dataSourceRt"/>
    </bean>

    <bean id="liquibase" class="liquibase.integration.spring.SpringLiquibase">
        <property name="dataSource" ref="dataSource" />
        <property name="changeLog" value="classpath:migrations/changelog.xml" />
    </bean>

    <context:property-placeholder location="info/xonix/zlo/search/spring/jdbc.properties"/>
    <!-- context:component-scan base-package="*"/-->
</beans>