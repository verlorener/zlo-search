<?xml version="1.0"?>

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <xs:include schemaLocation="author.xsd"/>

    <xs:element name="message">
        <xs:annotation>
            <xs:documentation>Message document</xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:choice>
                <xs:element name="status">
                    <xs:annotation>
                        <xs:documentation>
                            deleted - message exised before but was removed by moderator
                            not_exists - message not yet exists
                        </xs:documentation>
                    </xs:annotation>
                    <xs:simpleType>
                        <xs:restriction base="xs:string">
                            <xs:enumeration value="deleted"/>
                            <xs:enumeration value="not_exists"/>
                        </xs:restriction>
                    </xs:simpleType>
                </xs:element>

                <xs:sequence>
                    <xs:element ref="info" minOccurs="1" maxOccurs="1"/>
                    <xs:element ref="author" minOccurs="1" maxOccurs="1"/>
                    <xs:element ref="content" minOccurs="1" maxOccurs="1"/>
                </xs:sequence>
            </xs:choice>

            <!--effectively positive-->
            <xs:attribute name="id" type="xs:long" use="required">
                <xs:annotation>
                    <xs:documentation>
                        This message ID number
                    </xs:documentation>
                </xs:annotation>
            </xs:attribute>
        </xs:complexType>
    </xs:element>

    <xs:element name="info">
        <xs:complexType>
            <xs:all>
                <xs:element name="date" type="xs:dateTime">
                    <xs:annotation>
                        <xs:documentation>
                            Creation date

                            Should be in GMT (UTC) timezone, and end by Z
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>

                <xs:element name="dateModified" type="xs:dateTime" minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            Last modification date

                            Should be in GMT (UTC) timezone, and end by Z
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>

                <!--effectively positive-->
                <xs:element name="parentId" type="xs:long" minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>
                            Parent message Id

                            If this is absent or value is less or equal 0 the message is considered
                            to be root of a thread.
                        </xs:documentation>
                    </xs:annotation>
                </xs:element>

                <xs:element name="messageUrl" type="xs:anyURI" minOccurs="0">
                    <xs:annotation>
                        <xs:documentation>URL of the message</xs:documentation>
                    </xs:annotation>
                </xs:element>
            </xs:all>
        </xs:complexType>
    </xs:element>

    <xs:element name="content">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="category" type="xs:string"/>

                <xs:element name="title" type="xs:string"/>

                <xs:element name="body" type="xs:string" minOccurs="0"/>

                <xs:element name="tags" minOccurs="0">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="tag" type="xs:string" maxOccurs="unbounded"/>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>