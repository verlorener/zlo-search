<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4"
         xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" >
    <jsp-config>
        <taglib>
            <taglib-uri>/core</taglib-uri>
            <taglib-location>WEB-INF/tld/c.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>/format</taglib-uri>
            <taglib-location>WEB-INF/tld/fmt.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>/sql</taglib-uri>
            <taglib-location>WEB-INF/tld/sql.tld</taglib-location>
        </taglib>
    </jsp-config>
    <servlet>
        <description>Search servlet</description>
        <servlet-name>search</servlet-name>
        <servlet-class>org.xonix.zlo.web.servlets.SearchServlet</servlet-class>
        <init-param>
            <param-name>defaultRequestCharset</param-name>
            <param-value>windows-1251</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>Saved message servlet</description>
        <servlet-name>msg</servlet-name>
        <servlet-class>org.xonix.zlo.web.servlets.SavedMessageServlet</servlet-class>
        <init-param>
            <param-name>defaultRequestCharset</param-name>
            <param-value>windows-1251</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>msg</servlet-name>
        <url-pattern>/msg</url-pattern>
    </servlet-mapping>

    <!-- test -->
    <servlet>
        <servlet-name>test2</servlet-name>
        <servlet-class>org.xonix.zlo.web.servlets.test.TestLazy1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>test2</servlet-name>
        <url-pattern>/test2</url-pattern>
    </servlet-mapping>

    <resource-ref>
          <description>DB Connection</description>
          <res-ref-name>jdbc/zlo_storage</res-ref-name>
          <res-type>javax.sql.DataSource</res-type>
          <res-auth>Container</res-auth>
      </resource-ref>
</web-app>
